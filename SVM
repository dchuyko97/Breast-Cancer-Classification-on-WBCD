import pandas as pd

data = {'y_Actual':    ['1', '0',  '0', '1', '0', '1', '0',  '0', '1', '0', '1', '0'],
        'y_Predicted': ['1', '1', '0', '1', '0', '1', '1', '0', '1', '0', '0',  '0']    
        }

df = pd.DataFrame(data, columns=['y_Actual','y_Predicted'])
df['y_Actual'] = df['y_Actual'].map({'1': 1, '0': 0})
df['y_Predicted'] = df['y_Predicted'].map({'1': 1, '0': 0})

